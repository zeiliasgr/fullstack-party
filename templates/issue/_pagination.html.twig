<div class="nav-wraper">
	<nav role="pagination" aria-label="...">
		<ul class="pagination">
			{% if page > 1 %}
				<li class="page-item">
					<a class="previous page-link" href="/issues?page={{page - 1}}" tabindex="-1">Previous</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="previous page-link" href="#" tabindex="-1">Previous</a>
				</li>
			{% endif %}

			{% for i in range(1, totalPages) %}
				{% if i != page %}
					<li class="page-item"><a class="page-link" href="/issues?page={{i}}">{{i}}</a></li>
				{% else %}
					<li class="page-item active">
						<a class="page-link" href="/issues?page={{i}}">{{i}}<span class="sr-only">(current)</span></a>
					</li>
				{% endif %}
			{% endfor %}

			{% if page < totalPages %}
				<li class="page-item">
					<a class="next page-link" href="/issues?page={{page + 1}}" tabindex="-1">Next</a>
				</li>
			{% else %}
				<li class="page-item disabled">
					<a class="next page-link" href="#" tabindex="-1">Next</a>
				</li>
			{% endif %}
		</ul>
	</nav>
</div>